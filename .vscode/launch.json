{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Launch GUI",
            "type": "cppdbg",
            "request": "launch",
            // Resolved by CMake Tools:
            "program": "${command:cmake.launchTargetPath}",
            "args": ["gui"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    // add the directory where our target was built to the PATHs
                    // it gets resolved by CMake Tools:
                    "name": "PATH",
                    "value": "$PATH:${command:cmake.launchTargetDirectory}"
                }
            ],
            "externalConsole": true,
            "MIMode": "lldb",
            "setupCommands": []
        },
        {
            "name": "(lldb) Launch \"Test Refractive Best Fit\"",
            "type": "cppdbg",
            "request": "launch",
            // Resolved by CMake Tools:
            "program": "${command:cmake.launchTargetPath}",
            "args": [
                "image_undistorter",
                "--image_path", "$HOME/colmap_active_workspace/images",
                "--input_path", "$HOME/colmap_active_workspace/sparse/0",
                "--output_path", "$HOME/colmap_active_workspace/dense",
                "--output_type", "COLMAP",
                "--max_image_size", "2000"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    // add the directory where our target was built to the PATHs
                    // it gets resolved by CMake Tools:
                    "name": "PATH",
                    "value": "$PATH:${command:cmake.launchTargetDirectory}"
                },
                {
                    "name": "WORKSPACE_PATH",
                    "value": "$HOME/colmap_active_workspace"
                }
            ],
            "externalConsole": true,
            "MIMode": "lldb",
            "setupCommands": [],
            "preLaunchTask": "prepare_refractive_best_fit"
        }
    ]
}